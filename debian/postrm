#!/bin/sh
set -e

case "$1" in
    purge)
        # Remove configuration
        rm -rf /etc/debswarm
        # Remove cache (optional - user data)
        rm -rf /var/cache/debswarm
        rm -rf /var/lib/debswarm
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
